{
    "name": "@salutejs/perftool",
    "version": "0.25.0",
    "author": "Salute Frontend Team <salute.developers@gmail.com>",
    "description": "Performance Monitoring System for React Components",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/salute-developers/perftool.git",
        "directory": "packages/perftool"
    },
    "bugs": {
        "url": "https://github.com/salute-developers/perftool/issues"
    },
    "homepage": "https://github.com/salute-developers/perftool#readme",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "engines": {
        "node": ">=16"
    },
    "bin": {
        "perftool": "scripts/start.sh",
        "perftool-compare": "scripts/start-compare.sh"
    },
    "files": [
        "dist/**/*.d.ts",
        "dist/index.js",
        "dist/api/external.js",
        "lib",
        "!lib/index.ts",
        "scripts",
        "tsconfig.json",
        "!**/__spec__/**"
    ],
    "scripts": {
        "prebuild": "pnpm run clean",
        "prepare": "pnpm run build",
        "build": "tsc --project tsconfig.build.json",
        "clean": "rm -rf dist",
        "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest test",
        "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest test --coverage",
        "test:coverage:serve": "pnpm exec http-server ./coverage/lcov-report",
        "typecheck": "tsc --noEmit"
    },
    "peerDependencies": {
        "react": ">=16.8.0",
        "react-dom": ">=16.8.0"
    },
    "dependencies": {
        "@babel/core": "7.23.7",
        "@babel/preset-env": "7.23.8",
        "@babel/preset-react": "7.23.3",
        "@babel/preset-typescript": "7.23.3",
        "@swc/core": "1.3.105",
        "babel-loader": "9.1.3",
        "chalk": "5.3.0",
        "commander": "11.1.0",
        "deepmerge": "4.3.1",
        "express": "4.18.2",
        "fast-glob": "3.3.2",
        "html-webpack-plugin": "5.6.0",
        "jstat": "1.9.6",
        "loglevel": "1.8.1",
        "loglevel-plugin-prefix": "0.8.4",
        "lru-cache": "10.1.0",
        "mime": "4.0.1",
        "minimatch": "9.0.3",
        "morgan": "1.10.0",
        "puppeteer": "21.7.0",
        "serialize-error": "11.0.3",
        "shallow-equal": "3.1.0",
        "simple-git": "3.22.0",
        "ts-node": "10.9.2",
        "typescript": "5.3.3",
        "webpack": "5.89.0"
    },
    "devDependencies": {
        "@jest/globals": "29.7.0",
        "@types/express": "4.17.21",
        "@types/jest": "29.5.11",
        "@types/mime": "3.0.4",
        "@types/morgan": "1.9.9",
        "@types/node": "20.11.25",
        "@types/react": "18.2.48",
        "@types/react-dom": "18.2.18",
        "jest": "29.7.0",
        "jest-environment-jsdom": "29.7.0",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "ts-jest": "29.1.2"
    },
    "contributors": [
        "Artem Khaidarov (https://github.com/akhdrv)"
    ],
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "performance",
        "testing",
        "react",
        "components"
    ]
}
