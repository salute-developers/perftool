{
  "name": "perftool-monorepo",
  "private": true,
  "author": "Salute Frontend Team <salute.developers@gmail.com>",
  "contributors": [
    "Artem Khaidarov (https://github.com/akhdrv)"
  ],
  "description": "Performance measurement tool for frontend components",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:salute-developers/perftool.git"
  },
  "bugs": {
    "url": "https://github.com/salute-developers/perftool/issues"
  },
  "homepage": "https://github.com/salute-developers/perftool#readme",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint --ext .ts,.tsx",
    "lint:fix": "eslint --ext .ts,.tsx --fix",
    "prettier:fix": "prettier --write .",
    "clean": "git clean -fdX --exclude \"\\!.idea\" --exclude \"\\!.idea/*\"",
    "release": "auto shipit"
  },
  "devDependencies": {
    "@auto-it/conventional-commits": "10.46.0",
    "@auto-it/npm": "10.44.0",
    "@commitlint/cli": "17.6.6",
    "@commitlint/config-conventional": "17.6.6",
    "@typescript-eslint/eslint-plugin": "5.60.0",
    "@typescript-eslint/parser": "5.58.0",
    "auto": "10.46.0",
    "eslint": "8.38.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.2",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.3",
    "lerna": "6.6.1",
    "lint-staged": "13.2.2",
    "prettier": "2.8.8",
    "semver": "7.3.8",
    "yaml-lint": "1.7.0"
  },
  "auto": {
    "plugins": [
      [
        "npm",
        {
          "setRcToken": false
        }
      ],
      "conventional-commits"
    ]
  },
  "packageManager": "pnpm@8.6.2",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
